<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cancel_pre_substance"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#000000"
        android:onClick="backToMainUI"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:id="@+id/known_list_button"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="60dp"
        android:minWidth="88dip"
        android:onClick="known_substanceListUI"
        android:text="Choose a substance from known-substance list"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/new_substance_button"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp"
        android:minWidth="88dip"
        android:onClick="storeNewSubstance"
        android:text="Add a new substance"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
